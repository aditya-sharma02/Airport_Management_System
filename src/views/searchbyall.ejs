                        <button type="submit" class="btn btn-primary submit-button">Search</button>
                    </form>
                </div>
            </div>


            <!--  -->
            <div id="flight_details">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Pass ID</th>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Seat Number</th>
                            <th>Age</th>
                            <th>Class</th>
                            <th>Flight Name</th>
                            <th>Type</th>
                            <th>Flight ID</th>
                            <th colspan="3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0;i< data.length;i++){ %>
                            <tr>
                                <td><%- data[i].P_ID %>
                                </td>
                                <td><%- data[i].PName %></td>
                                <td><%- data[i].gender %></td>
                                <td><%- data[i].seat_number %></td>
                                <td><%- data[i].age %></td>
                                <td><%- data[i].class_type %></td>
                                <td><%- data[i].FName %></td>
                                <td><%- data[i].type %></td>
                                <td><%- data[i].F_ID %></td>
                                <td><a href="/getfullpassengerdetail?id=<%- data[i].P_ID %>"><i
                                            class="fa-solid fa-location-arrow" id="one"></i></a></td>
                                <td><a href="/deletepassenger?id=<%- data[i].P_ID %>"><i class="fa-solid fa-trash"
                                            id="two"></i></a>
                                </td>
                                <td><a href="/updatepassenger?id=<%- data[i].P_ID %>"><i class="fa-solid fa-pen"
                                            id="three"></i></a>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>





