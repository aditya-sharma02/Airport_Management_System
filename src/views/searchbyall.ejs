        <%- include('./partials/navadmin') %>
            <div id="login-form">
                <div class="form details-form">
                    <div>
                        <h1 class="input-heading" style="padding: 20px;">
                            <span>SEARCH PASSENGER DETAILS</span>
                        </h1>
                    </div>
                    <form action="/searchbyall" method="POST">
                        <div class="mb-3">
                            <input type="text" class="form-control" placeholder="Passenger Name" name="name">
                        </div>
                        <div class="mb-3">
                            <input type="number" class="form-control" placeholder="Passenger ID" name="pid">
                        </div>
                        <div class="mb-3">
                            <input type="number" class="form-control" placeholder="Flight No" name="fid">
                        </div>
                        <div class="mb-3">
