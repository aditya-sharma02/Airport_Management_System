  <div class="parentlogin">

    <%- include('./partials/navadmin') %>
      <div class="login-form">
        <div class="form details-form">
          <div>
            <h1 class="input-heading"><span>UPDATE PASSENGER DATA</span></h1>
          </div>
          <form action="/updatepassenger" method="POST">
            <div class="mb-3">
              <input type="hidden" class="form-control" value="<%- data[0].P_ID %>" placeholder="Enter Id"
                name="P_ID" />
            </div>
            <div class="mb-3">
              <input type="text" class="form-control" value="<%- data[0].PName %>" placeholder="Enter name"
                name="PName" />
            </div>
            <div class="mb-3">
              <input type="text" class="form-control" value="<%- data[0].gender %>" placeholder="Enter gender"
                name="gender" />
            </div>
            <div class="mb-3">
              <input type="number" class="form-control" value="<%- data[0].seat_number %>"
                placeholder="Enter seat number" name="seat_number" />
            </div>
            <div class="mb-3">
              <input type="number" class="form-control" value="<%- data[0].age %>" placeholder="Enter age" name="age" />
            </div>
            <div class="mb-3">
              <input type="text" class="form-control" value="<%- data[0].class_type %>" placeholder="Enter class"
                name="class_type" />
            </div>

            <div class="mb-3">
              <input type="text" class="form-control" value="<%- data[0].type %>" placeholder="Enter type"
                name="type" />
            </div>
            <div class="mb-3">
              <input type="text" class="form-control" value="<%- data[0].F_ID %>" placeholder="Enter type"
                name="F_ID" />
              <!-- <select
                    class="form-select"
                    aria-label="Default select example"
                    name="F_ID"
                  >
