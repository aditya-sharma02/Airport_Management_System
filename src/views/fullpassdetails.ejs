<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header') %>
</head>

<body class="flight">
    <%- include('./partials/navadmin') %>

    <div class="parent">
        <div class="container">
          <div class="airportname">StarLight airport</div>
          <div>
            <div class="row1">
              <div class="col1 value">FLIGHT ID</div>
              <div class="col1"><%- data1[0].F_ID %></div>
            </div>
            <!-- flight details -->
            <div class="row2">
              <div class="row1 part">
                <div class="col1 value">FROM</div>
                <div class="col1 src-dst"><%- data1[0].src_airport %></div>
              </div>
              <div class="col1" style="font-size: 80px; color: rgb(61, 111, 155);"><i class="fa-solid fa-plane fa-beat-fade"></i></div>
              <div class="row1 part">
                <div class="col1 value">TO</div>
                <div class="col1 src-dst"><%- data1[0].dst_airport %></div>
              </div>
            </div>
            <div class="row2">
              <div class="row1 part">
                <div class="col1 value">FLIGHT NAME</div>
                <div class="col1"><%- data1[0].FName %></div>
              </div>
              <div class="row1 part">
                <div class="col1 value">FLIGHT TYPE</div>
                <div class="col1"><%- data1[0].type %></div>
              </div>
              <div class="row1 part">
                <div class="col1 value">START TIME</div>
                <div class="col1" style="color: rgb(54, 158, 49);"><%- data1[0].start_time %></div>
              </div>
              <div class="row1 part">
                <div class="col1 value">END TIME</div>
                <div class="col1" style="color: rgb(54, 158, 49);"><%- data1[0].end_time %></div>
              </div>
            </div>
            <!-- passenger detail -->
            <div class="row2">
              <div class="row1 part">
                <div class="col1 value">PASSENGER NAME</div>
                <div class="col1"><%- data1[0].PName %></div>
              </div>
              <div class="row1 part">
                <div class="col1 value">GENDER</div>
                <div class="col1"><%- data1[0].gender %></div>
              </div>
              <div class="row1 part">
                <div class="col1 value">SEAT NO.</div>
                <div class="col1"><%- data1[0].seat_number %></div>
              </div>
              <div class="row1 part">
                <div class="col1 value">AGE</div>
                <div class="col1"><%- data1[0].age %></div>
              </div>
              <div class="row1 part">
                <div class="col1 value">CLASS TYPE</div>
                <div class="col1"><%- data1[0].class_type %></div>
              </div>
            </div>
            <!-- route details -->
            <div class="row2">
              <div class="row1 part">
                <div class="col1 value">PASSENGER ID</div>
                <div class="col1"><%- data1[0].P_ID %></div>
              </div>
              <div class="row1 part">
                <div class="col1 value">ROUTE NO.</div>
                <div class="col1"><%- data2[0].Route_No %></div>
              </div>
              <div class="row1 part">
                <div class="col1 value">ALTITUDE</div>
                <div class="col1"><%- data2[0].altitude %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</body>

</html>